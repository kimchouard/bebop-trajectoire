<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PilotingActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency"
        android:id="@+id/emergencyBt"
        android:width="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flip"
        android:id="@+id/flipBt"
        android:layout_below="@+id/emergencyBt"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Landing"
        android:id="@+id/landingBt"
        android:width="150dp"
        android:layout_below="@+id/takeoffBt"
        android:layout_alignLeft="@+id/takeoffBt"
        android:layout_alignStart="@+id/takeoffBt" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="R"
        android:id="@+id/yawRightBt"
        android:layout_above="@+id/gazDownBt"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="L"
        android:id="@+id/rollLeftBt"
        android:width="50dp"
        android:layout_above="@+id/backBt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Takeoff"
        android:id="@+id/takeoffBt"
        android:width="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="L"
        android:id="@+id/yawLeftBt"
        android:layout_below="@+id/gazUpBt"
        android:layout_toLeftOf="@+id/gazUpBt"
        android:layout_toStartOf="@+id/gazUpBt"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="R"
        android:id="@+id/rollRightBt"
        android:width="20dp"
        android:layout_above="@+id/backBt"
        android:layout_toRightOf="@+id/backBt"
        android:layout_toEndOf="@+id/backBt" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="U"
        android:id="@+id/gazUpBt"
        android:width="100dp"
        android:layout_above="@+id/yawRightBt"
        android:layout_toLeftOf="@+id/yawRightBt"
        android:layout_toStartOf="@+id/yawRightBt" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="D"
        android:id="@+id/gazDownBt"
        android:width="100dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/yawRightBt"
        android:layout_toStartOf="@+id/yawRightBt" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="F"
        android:id="@+id/forwardBt"
        android:width="100dp"
        android:layout_above="@+id/rollLeftBt"
        android:layout_toRightOf="@+id/rollLeftBt"
        android:layout_toEndOf="@+id/rollLeftBt" />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="B"
        android:id="@+id/backBt"
        android:width="100dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/rollLeftBt"
        android:layout_toEndOf="@+id/rollLeftBt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Battery: "
        android:id="@+id/textView"
        android:layout_above="@+id/emergencyBt"
        android:layout_alignLeft="@+id/emergencyBt"
        android:layout_alignStart="@+id/emergencyBt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="XXX%"
        android:id="@+id/batteryLabel"
        android:layout_above="@+id/emergencyBt"
        android:layout_alignRight="@+id/emergencyBt"
        android:layout_alignEnd="@+id/emergencyBt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="GPS: "
        android:id="@+id/GPSLabel"
        android:layout_above="@+id/textView"
        android:layout_alignLeft="@+id/emergencyBt"
        android:layout_alignStart="@+id/emergencyBt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="N/A"
        android:id="@+id/GPLValue"
        android:layout_above="@+id/textView"
        android:layout_alignRight="@+id/emergencyBt"
        android:layout_alignEnd="@+id/emergencyBt" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Roll"
        android:id="@+id/rollLabel"
        android:width="50dp"
        android:textAlignment="center"
        android:gravity="center_horizontal|right"
        android:layout_below="@+id/yawLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="N/A"
        android:id="@+id/rollValue"
        android:width="50dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/rollLabel"
        android:layout_toRightOf="@+id/rollLabel"
        android:layout_toEndOf="@+id/rollLabel" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Yaw"
        android:id="@+id/yawLabel"
        android:width="50dp"
        android:gravity="center_horizontal|right"
        android:layout_below="@+id/pitchLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="N/A"
        android:id="@+id/yawValue"
        android:width="50dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/pitchLabel"
        android:layout_toRightOf="@+id/yawLabel"
        android:layout_toEndOf="@+id/yawLabel" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pitch"
        android:id="@+id/pitchLabel"
        android:width="50dp"
        android:gravity="center_horizontal|right"
        android:layout_below="@+id/altitudeLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="N/A"
        android:id="@+id/pitchValue"
        android:width="50dp"
        android:gravity="center_horizontal"
        android:layout_above="@+id/yawValue"
        android:layout_toRightOf="@+id/yawLabel"
        android:layout_toEndOf="@+id/yawLabel" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Altitude"
        android:id="@+id/altitudeLabel"
        android:width="50dp"
        android:gravity="center_horizontal|right"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="N/A"
        android:id="@+id/altitudeValue"
        android:width="50dp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/altitudeLabel"
        android:layout_toEndOf="@+id/altitudeLabel" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Latitude"
        android:id="@+id/latitudeLabel"
        android:width="50dp"
        android:textAlignment="center"
        android:gravity="center_horizontal|right"
        android:layout_below="@+id/rollLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="N/A"
        android:id="@+id/latitudeValue"
        android:width="50dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/latitudeLabel"
        android:layout_toRightOf="@+id/latitudeLabel"
        android:layout_toEndOf="@+id/latitudeLabel" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Longitude"
        android:id="@+id/longitudeLabel"
        android:width="50dp"
        android:textAlignment="center"
        android:gravity="center_horizontal|right"
        android:layout_below="@+id/latitudeLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Path"
        android:id="@+id/pathBt"
        android:layout_below="@+id/landingBt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="N/A"
        android:id="@+id/longitudeValue"
        android:width="50dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/longitudeLabel"
        android:layout_toRightOf="@+id/latitudeLabel"
        android:layout_toEndOf="@+id/latitudeLabel" />
</RelativeLayout>
